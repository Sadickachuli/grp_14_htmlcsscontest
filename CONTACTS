<!DOCTYPE html>
<html>
<head>
  <title>Contact Us</title>
  <script>
    function submitForm() {
      // Get form values
      var name = document.getElementById("name").value;
      var email = document.getElementById("email").value;
      var query = document.getElementById("query").value;
      
      // You can perform additional validation here
      
      // Create a new form data object
      var formData = new FormData();
      formData.append("name", name);
      formData.append("email", email);
      formData.append("query", query);
      
      // Send form data to the server using fetch API or AJAX
      fetch("process-form.php", {
        method: "POST",
        body: formData
      })
      .then(function(response) {
        // Handle the response from the server
        if (response.ok) {
          // Display a success message
          var successMessage = "Thank you for your query, " + name + "! We will get back to you soon.";
          alert(successMessage);
          
          // Reset form fields
          document.getElementById("name").value = "";
          document.getElementById("email").value = "";
          document.getElementById("query").value = "";
        } else {
          // Handle the error or display an error message
          alert("An error occurred while submitting the form. Please try again.");
        }
      })
      .catch(function(error) {
        // Handle network errors or other exceptions
        alert("An error occurred while submitting the form. Please try again.");
      });
    }
  </script>
</head>
<body>
  <h2>Contact Us</h2>
  <form>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required><br><br>
    
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required><br><br>
    
    <label for="query">Query or Message:</label><br>
    <textarea id="query" name="query" rows="5" cols="30" required></textarea><br><br>
    
    <button type="button" onclick="submitForm()">Submit</button>
  </form>
</body>
</html>
